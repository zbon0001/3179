{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Percentage of population aged 17-65 in each state which has donated at least once in the past year",
    "width": 600,
    "height": 300,
    "projection": {"type": "equalEarth"},
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/yzyz5796/3179/refs/heads/main/A2/ne_10m_admin_1_states_provinces.json",
                "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
            },
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/zbon0001/3179/refs/heads/main/charts/map_data.csv"
                        },
                        "key": "State",
                        "fields": ["Percentage of Population"]
                    }
                },
                {
                    "calculate": "datum['Percentage of Population'] == null ? 0 : datum['Percentage of Population']",
                    "as": "Population Percentage"
                },
                {
                  "calculate": "datum['Population Percentage'] >= 1 && datum['Population Percentage'] <= 1.5 ? '1-1.5' : datum['Population Percentage'] >= 1.5 && datum['Population Percentage'] < 2 ? '1.5-2' : datum['Population Percentage'] >= 2 &&datum['Population Percentage'] < 3 ? '2-3' : datum['Population Percentage'] >= 3 &&datum['Population Percentage'] < 5 ? '3-5' : datum['Population Percentage'] >= 5 && datum['Population Percentage'] <= 12 ? '5-12' : 'Other'",
                  "as": "Population Bin"
                }
            ],
            "mark": {"type": "geoshape"},
            "encoding": {
                "color": {
                    "field": "Population Bin",
                    "type": "nominal",
                    "scale": {
                        "domain": ["1-1.5", "1.5-2", "2-3", "3-5", "5-12"],
                        "range": ["#fee5d9", "#fcbba1", "#fc9272", "#fb6a4a", "#de2d26"]
                    },
                "legend": {
                  "title": "Percentage of Population",
                  "orient": "bottom"
                }
                },
                "tooltip": [
                {"field": "properties.name", "type": "nominal", "title": "State"},
                {
                    "field": "Percentage of Population",
                    "type": "quantitative",
                    "title": "Percentage of Population"
                }
                ]
            }
        }
    ]
}
